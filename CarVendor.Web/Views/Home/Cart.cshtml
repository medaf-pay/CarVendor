<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>

<div ng-app="myApp" ng-controller="CartCTR">


    <div class="table-responsive" ng-if="Items.length>0">
        <table class="table">
            <thead class="thead-dark" style="background-color:gray">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Car Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Color</th>
                    <th scope="col">Car Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in Items">
                    <th scope="row">{{$index+1}}</th>
                    <td>{{item.Brand}}</td>
                    <td>{{item.CarName}}</td>
                    <td>{{item.Category.Text}}</td>
                    <td>{{item.Color.Text}}</td>
                    <td>{{item.Color.Price}}</td>
                    <td> <input type="number" class="form-control" min="1" ng-change="QuantityChange()" ng-model="item.Quantity"></td>
                    <td>{{item.Color.Price*item.Quantity}} </td>
                    <td>
                  
                            <button ng-click="DeleteItem($index)" type="button" class="btn-danger" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <div class="row" ng-if="Items.length>0">
        <div class="form-group col-lg-12 col-md-12 col-sm-12">

            <div class="container form-group ">
                <h4 style="background-color:gray;color:white"  class="col-lg-6">Total Price <label style="margin-left:50%;color:white">{{totalPrice}}</label></h4>
                <h4 style="background-color:gray;color:white" class="col-lg-6">Total Quantity <label style="margin-left:50%;color:white">{{totalQuantity}}</label></h4>
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12" style="direction:rtl">
                <button type="button" class="btn btn-success" ng-click="GoToCustomerInfo()">Check Out</button>
            </div>
        </div>
    </div>
    <div ng-if="Items.length==0">
       
        <img src="~/Content/images/NoData.png" />
    </div>
</div>
