@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form ng-app="CarApp" ng-controller="DeleteCar" name="EditCarFrom" novalidate>
    <h1>Delete</h1>

    <div class="shadow-sm p-4 mb-4 " style="background-color: #8080800a;">
        <div class="shadow-sm p-2 mb-3 col-lg-2" style="background-color: #8080800a;font-weight:700;color:brown">Main Information:</div>
        <div class="container">
            <div class="form-row">
                <div class="form-group col-md-6 mb-4" ng-class="{'submitted':(EditCarFrom.InputCarName.$touched||SubmetAction)&&EditCarFrom.InputCarName.$invalid}">
                    <label>Car Name:</label>
                    <input type="text" ng-value="editcar.Name" class="form-control" ng-model="editCar.Name" name="InputCarName" id="inputEmail4"  required>
                </div>

                <div class="form-group col-md-6 mb-4" ng-class="{'submitted':(EditCarFrom.SelectModel.$touched||SubmetAction)&&EditCarFrom.SelectModel.$invalid}">

                    <label>Model:</label>
                    <select name="SelectModel" class="form-control" ng-model="editCar.Model" required>
                        <option value="">Select Car Model</option>
                        <option ng-repeat="Model  in Models" value="{{Model}}">{{Model}}</option>
                    </select>
                </div>

            

                <div class="form-group col-md-6 mb-4" ng-class="{'submitted':(EditCarFrom.SelectBrand.$touched||SubmetAction)&&EditCarFrom.SelectBrand.$invalid}">
                    <label>Brand:</label>
                    <select name="SelectBrand" class="form-control" ng-model="editCar.Brand" required>
                        <option value="">Select Car Brand</option>
                        <option ng-repeat="Brand  in Brands" value="{{Brand.Id}}">{{Brand.Name}}</option>
                    </select>
                </div>
            </div>

        </div>
    </div>
</form>





